{% extends 'BlogBundle::layout.html.twig' %}


{% block content %}

    {% for post in posts %}

        <li class="nav-item active">
            <a class="nav-link" href="{{ path('show', {'slug': post.slug}) }}">{{ post.title }}</a>
        </li>

    {% endfor %}

    </ul>
    </ul>
    </div>
    </nav>

<div class="container" style="margin-top: 100px">

    <div class="posts text-center">

        <h2>{{ post.title }}</h2>
        <p>{{ post.content }}</p>

    </div>

</div>

{% endblock %}